{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn cross-env BROWSER=none yarn start",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Manga Downloader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "scope": [
          "https://*",
          "http://*"
        ]
      },
      "window": {
        "close": true,
        "minimize": true,
        "print": true,
        "startDragging": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "removeFile": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPDATA/*"]
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "sheller",
            "cmd": "$APPDATA/./sheller",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.yofagh.mangadownloader",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "height": 600,
        "resizable": false,
        "title": "Manga Downloader",
        "width": 1000,
        "decorations": false,
        "visible": false
      },
      {
        "width": 400,
        "height": 200,
        "decorations": false,
        "url": "splash.html",
        "label": "splashscreen"
      }
    ]
  }
}
